a:link {color: #000000;}
a:visited {color: #000000;}
a:hover {color: #FF0000;}
a:active {color: #336699;}

html{
	background-color: #FF9900;
}

li{
text-decoration: none;
}

ul li{
text-decoration: none;
}

body {
	color: black;
	font-family: georgia, "times new roman", arial; 
	margin: 1.5% auto 1.5% auto;
	text-align: left; 
	background-color: white;
	padding: 0% 0% 0% 0%; 
	border: 1px solid black;
	width: 82%;
}

.centered{
	text-align: center;
}

#header, #header-english{
	margin: 1% 1% 0% 1%;
	background-position: center;
	background-color: #2A89CD;
	padding: auto auto 0px auto;
	background-repeat: no-repeat;
	height:240px;
	border: 1px solid black;
	background-image: url(../images/autostopowicz-header.jpg);   
}

#header-english{
	background-image: url(../images/hitch-hiker-header.jpg);
}

#content{
	margin: 2% 1% 0% 1%;
	padding: 4% auto 2% auto;
}

#topic{
	margin: 0% auto 0% auto;
	padding: 1% auto 2% auto;
	-background-color:#eeaa00 ;
	width: 82%;
	background-color:#2A89CD; 
}

div#menu{
	color: black;
	text-align: center;
	border-right: 1px solid black;
	border-left: 1px solid black;
	border-bottom: 1px solid black;
	font-family: Georgia, "Times New Roman", Times, serif;
	font-style:oblique;
	font-size: x-large;
	margin: 0% 1% 0% 1%;
	padding-bottom: 10px;
	background-color:#FFFFFF;  
}

#loginbox{
	width: 200px;
	text-align:center;
	margin-right: 0px;
	margin-left: 0px;
	padding-top: 0px;
	height:250px;
	float:right;
}

#loginbox_top{
	width: 100%;
	padding: 0px;
	margin: 0px;
}

.loginbox_fill_top, .loginbox_fill_bottom {
	width: 100%;
	height: 29px;
	background-image: url(../images/loginbox/top_fill.png);
	background-repeat: x-repeat;
	padding: 0px;
	margin: 0px;
}

.loginbox_fill_bottom{
	background-image: url(../images/loginbox/bottom_fill.png);
}

#login_table{
	-border: 1px solid #0000C8;
	width: 90%;
	margin-left: auto;
	margin-right: auto;
	padding-top: 3px;
}

#loginbox_content{
	border-left: 3px solid black;
	border-right: 3px solid black;
	padding: 0px;
	margin: 0px;
	width: 194px;
	
}

#language_change{
	text-align: center;
	margin-left: auto;
	margin-right: auto;
}

#selection{
	margin-left: auto;
	margin-right:auto;
	margin-bottom: 0px;
	padding-bottom: 5px;
}

#selection #selection_table{
	margin-left: auto;
	margin-right: auto;
}

.submit-button{
	color: #336699;
	background-color: #FFCC33;
	text-decoration: none;
	border: 1px solid #000033;
	text-align: center;
	margin:	auto;
	width: 75%;
	padding-left: 3px;
	padding-right: 3px;
	font-weight: bold;

}
.submit-button:hover{
	text-shadow:#000000;
}

.button{
	margin-left:4px;
	margin-right:4px;
}
.down{
	padding-top:10px;
}
.blink{
	text-decoration: blink;
}
.nounderline{
	text-decoration: none;
}
